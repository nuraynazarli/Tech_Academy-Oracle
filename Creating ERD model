create table customers (
customer_id number not null,
customer_name varchar2(20) not null,
customer_surname varchar2(30) not null,
customer_email varchar(30),
customer_number varchar2(20) not null,
customer_address varchar2(15) not null,
constraint pk_cust_id primary key (customer_id));

create table products (
product_id number not null,
product_name varchar2(20) not null,
product_description varchar2(50),
product_cost number not null,
constraint pk_prod_id primary key (product_id));

create table orders (
order_id number not null,
order_status varchar2(15) not null,
order_date date not null,
customer_id number,
constraint fk_cust_id foreign key (customer_id) references customers (customer_id),
constraint pk_ord_id primary key (order_id));

create table order_items (
item_id number not null,
quantity number,
price number not null,
order_id number,
product_id number,
constraint fk_prod_id foreign key (product_id) references products (product_id),
constraint fk_ord_id foreign key (order_id) references orders (order_id),
constraint pk_item_id primary key (item_id));

create table regions (
region_id number not null,
region_name varchar2(20) not null,
constraint pk_reg_id primary key (region_id));

create table countries (
country_id number not null,
country_name varchar2(20) not null,
region_id number,
constraint pk_con_id primary key (country_id),
constraint fk_reg_id foreign key (region_id) references regions (region_id));

create table locations (
location_id number not null,
address varchar2(50) not null,
postal_code number not null,
city varchar2(20) not null,
country_id number,
constraint pk_loc_id primary key (location_id),
constraint fk_con_id foreign key (country_id) references countries (country_id));

create table warehouses (
warehouse_id number not null,
warehouse_name varchar2(20) not null,
warehouse_location varchar2(30) not null,
location_id number,
constraint fk_loc_id foreign key (location_id) references locations (location_id),
constraint pk_wh_id primary key (warehouse_id));

create table inventories (
product_id number,
warehouse_id number,
quantity number not null,
constraint fk_prodi_id foreign key (product_id) references products (product_id),
constraint fk_wh_id foreign key (warehouse_id) references warehouses (warehouse_id));
